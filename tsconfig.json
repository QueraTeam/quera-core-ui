{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "Commonjs",
    "target": "es2015",
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "strict": false,
    "jsx": "react",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", ".storybook/*"],
  "exclude": ["node_modules",  "out", "storybook-static"]
}
